{
	"name": "Snipt",
	"version": "1.0",
	"description": "Save text or code to snipt.net",
	"permissions": [
		"https://snipt.net/",
		"tabs"
		],
	"omnibox": {
			"keyword": "snipt"
		},
	"icons": {
		"16": "images/icon-16.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
		},
	"browser_action": {
		"default_icon": "images/icon-16-gs.png",
		"default_title": "Snipt it",
		"popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/snipt.content.js"]
		}
	],
	"manifest_version": 2
}